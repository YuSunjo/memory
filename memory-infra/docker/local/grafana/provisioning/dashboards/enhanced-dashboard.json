{
  "id": null,
  "title": "Memory API Enhanced Monitoring",
  "tags": ["memory", "spring-boot", "enhanced"],
  "timezone": "Asia/Seoul",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "üö® Application Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"memory-api\"}",
          "legendFormat": "Status"
        }
      ],
      "gridPos": {"h": 4, "w": 3, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "‚ùå DOWN", "color": "red"}}, "type": "value"},
            {"options": {"1": {"text": "‚úÖ UP", "color": "green"}}, "type": "value"}
          ]
        }
      }
    },
    {
      "id": 2,
      "title": "üíæ Heap Usage %",
      "type": "stat",
      "targets": [
        {
          "expr": "(jvm_memory_used_bytes{job=\"memory-api\",area=\"heap\"} / jvm_memory_max_bytes{job=\"memory-api\",area=\"heap\"}) * 100",
          "legendFormat": "Heap %"
        }
      ],
      "gridPos": {"h": 4, "w": 3, "x": 3, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 85}
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "id": 3,
      "title": "üåê Request Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job=\"memory-api\"}[5m])",
          "legendFormat": "RPS"
        }
      ],
      "gridPos": {"h": 4, "w": 3, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "reqps"
        }
      }
    },
    {
      "id": 4,
      "title": "‚ö° Response Time (95th)",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{job=\"memory-api\"}[5m]))",
          "legendFormat": "P95"
        }
      ],
      "gridPos": {"h": 4, "w": 3, "x": 9, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 0.5},
              {"color": "red", "value": 1}
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 5,
      "title": "üóÑÔ∏è DB Connections",
      "type": "stat",
      "targets": [
        {
          "expr": "hikari_connections_active{job=\"memory-api\"}",
          "legendFormat": "Active"
        }
      ],
      "gridPos": {"h": 4, "w": 3, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    },
    {
      "id": 6,
      "title": "üßµ JVM Threads",
      "type": "stat",
      "targets": [
        {
          "expr": "jvm_threads_live_threads{job=\"memory-api\"}",
          "legendFormat": "Live Threads"
        }
      ],
      "gridPos": {"h": 4, "w": 3, "x": 15, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    },
    {
      "id": 7,
      "title": "üîÑ GC Time",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{job=\"memory-api\"}[5m])",
          "legendFormat": "GC Time/s"
        }
      ],
      "gridPos": {"h": 4, "w": 3, "x": 18, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 0.01},
              {"color": "red", "value": 0.1}
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 8,
      "title": "üíΩ JVM Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{job=\"memory-api\",area=\"heap\"} / 1024 / 1024",
          "legendFormat": "Heap Used (MB)"
        },
        {
          "expr": "jvm_memory_max_bytes{job=\"memory-api\",area=\"heap\"} / 1024 / 1024",
          "legendFormat": "Heap Max (MB)"
        },
        {
          "expr": "jvm_memory_used_bytes{job=\"memory-api\",area=\"nonheap\"} / 1024 / 1024",
          "legendFormat": "Non-Heap Used (MB)"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    },
    {
      "id": 9,
      "title": "üìà HTTP Request Rates by Endpoint",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job=\"memory-api\"}[5m])",
          "legendFormat": "{{method}} {{uri}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "reqps"
        }
      }
    },
    {
      "id": 10,
      "title": "üîÑ Garbage Collection",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_count{job=\"memory-api\"}[5m])",
          "legendFormat": "GC {{action}} {{cause}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "ops"
        }
      }
    },
    {
      "id": 11,
      "title": "üóÑÔ∏è Database Connection Pool Detail",
      "type": "timeseries",
      "targets": [
        {
          "expr": "hikari_connections_active{job=\"memory-api\"}",
          "legendFormat": "Active"
        },
        {
          "expr": "hikari_connections_idle{job=\"memory-api\"}",
          "legendFormat": "Idle"
        },
        {
          "expr": "hikari_connections_pending{job=\"memory-api\"}",
          "legendFormat": "Pending"
        },
        {
          "expr": "hikari_connections_max{job=\"memory-api\"}",
          "legendFormat": "Max"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    }
  ]
}